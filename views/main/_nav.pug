// Navbar 3 Level (Light)
header.shadow-sm

    // Remove "navbar-sticky" class to make navigation bar scrollable with the page.
    .navbar-sticky.bg-light
        .navbar.navbar-expand-lg.navbar-light
            .container
                a(href='/').navbar-brand.d-none.d-sm-block.flex-shrink-0
                    img(src='/assets/theme/img/logo-audiophile.png' width='100' alt='Audiophile')
                a(href='/').navbar-brand.d-sm-none.flex-shrink-0.me-2
                    img(src='/assets/theme/img/logo-audiophile.png' width='74' alt='Audiophile')
                form.searchForm.input-group.d-none.d-lg-flex.mx-4
                    input(type='text' placeholder='Search for products' id="searchInput").form-control.rounded-end.pe-5
                    i.ci-search.position-absolute.top-50.end-0.translate-middle-y.text-muted.fs-base.me-3
                .navbar-toolbar.d-flex.flex-shrink-0.align-items-center
                    button(type='button' data-bs-toggle='collapse' data-bs-target='#navbarCollapse').navbar-toggler
                        span.navbar-toggler-icon
                    a(href='#').navbar-tool.navbar-stuck-toggler
                        span.navbar-tool-tooltip Expand menu
                        .navbar-tool-icon-box: i.navbar-tool-icon.ci-menu
                    a(href='#').navbar-tool.d-none.d-lg-flex
                        //- span.navbar-tool-tooltip Wishlist
                        //- .navbar-tool-icon-box: i.navbar-tool-icon.ci-heart

                        include _cart-nav

        .navbar.navbar-expand-lg.navbar-light.navbar-stuck-menu.mt-n2.pt-0.pb-2
            .container
                #navbarCollapse.collapse.navbar-collapse

                    // Search
                    form.searchForm.input-group.d-lg-none.my-3
                        i.ci-search.position-absolute.top-50.start-0.translate-middle-y.text-muted.fs-base.ms-3
                        input(type='text' placeholder='Search for products' id="searchInput").form-control.rounded-start
                    ul.navbar-nav
                        li.nav-item
                            a.nav-link(href="/") Home
                        
                        
                        li.nav-item.dropdown
                            a.nav-link.dropdown-toggle(href="#", data-bs-toggle="dropdown") Shop By Brand
                            ul.dropdown-menu
                                each brand in brands
                                    li
                                        a.dropdown-item(href=`/brands/${brand.slug}`)= brand.title
                        
                        li.nav-item
                            include _menuHeadphones
                        li.nav-item
                            include _menuSpeakers
                        li.nav-item
                            include _menuAccessories
                    //- include _menuSpeakers