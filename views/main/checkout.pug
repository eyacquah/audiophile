extends base

block content

  include _quickview
  include _nav

  // Page Title
  .page-title-overlap.bg-primary.pt-4
    .container.d-lg-flex.justify-content-between.py-2.py-lg-3
      .order-lg-2.mb-3.mb-lg-0.pt-lg-2
        nav(aria-label='breadcrumb')
          ol.breadcrumb.breadcrumb-light.flex-lg-nowrap.justify-content-center.justify-content-lg-start
            li.breadcrumb-item
              a.text-nowrap(href='/')
                i.ci-home
                | Audiophile
            li.breadcrumb-item.text-nowrap
              a(href='#') Shop
            li.breadcrumb-item.text-nowrap.active(aria-current='page') Checkout
      .order-lg-1.pe-lg-4.text-center.text-lg-start
        h1.h3.text-black.mb-0 Checkout
  .container.pb-5.mb-2.mb-md-4
    .row
      section.col-lg-8
        // Steps
        .steps.steps-light.pt-2.pb-3.mb-5
          a.step-item.active(href='/cart')
            .step-progress
              span.step-count 1
            .step-label
              i.ci-cart
              | Cart
          a.step-item.active.current(href='/checkout')
            .step-progress
              span.step-count 2
            .step-label
              i.ci-user-circle
              | Details
          a.step-item(href='#')
            .step-progress
              span.step-count 3
            .step-label
              i.ci-package
              | Shipping
          a.step-item(href='#')
            .step-progress
              span.step-count 4
            .step-label
              i.ci-card
              | Payment
          a.step-item(href='#')
            .step-progress
              span.step-count 5
            .step-label
              i.ci-check-circle
              | Review
