extends base

block content
    .container.mb-5.pb-3
        .bg-light.shadow-lg.rounded-3.overflow-hidden
            .row
                include _sidebar
                // Content
                section.col-lg-8.pt-lg-4.pb-4.mb-3
                    // Launch default modal
                    button(type="button" data-bs-toggle="modal", data-bs-target="#modalDefault").btn.btn-primary.btn-shadow
                        | Add Collection
                    include _createCollection
                    // Basic table
                    .table-responsive
                        table.table
                            thead
                                tr
                                    th Title
                                    th Edit
                                    th Delete
                            tbody
                                each collection in collections
                                    tr
                                        td= collection.title
                                        td
                                            button.editCollection(type="button" data-collection=collection data-bs-toggle="modal", data-bs-target="#modalDefault2").btn.btn-secondary.btn-icon
                                                i.ci-edit
                                        td
                                            button.deleteCollection(type="button" data-collection=collection data-bs-toggle="modal", data-bs-target="#delete").btn.btn-danger.btn-icon
                                                i.ci-trash
                                                
                include _deleteCollection
                include _editCollection
                